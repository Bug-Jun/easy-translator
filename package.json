{
	"name": "easy-translator",
	"displayName": "简易翻译器（Easy Translator）",
	"description": "非常简易的一个翻译器，使用百度的翻译api，支持28种语言互译",
	"version": "1.5.1908",
	"publisher": "bugjun",
	"engines": {
		"vscode": "^1.32.0"
	},
	"categories": [
		"Other"
	],
	"icon": "logo.png",
	"activationEvents": [
		"*"
	],
	"main": "./src/extension.js",
	"contributes": {
		"menus": {
			"editor/context": [
				{
					"when": "editorHasSelection",
					"command": "translator.translate",
					"group": "navigation"
				}
			]
		},
		"commands": [
			{
				"title": "%command.translator.translate%",
				"command": "translator.translate",
				"category": "%category.translator%"
			}
		],
		"keybindings": [
			{
				"command": "translator.translate",
				"key": "Ctrl+Alt+T"
			}
		],
		"configuration": [
			{
				"title": "简易翻译器",
				"properties": {
					"easyTranslator.API.baiduAPPID": {
						"type": "string",
						"default": "",
						"description": "设置百度翻译API的APPID"
					},
					"easyTranslator.API.baiduKey": {
						"type": "string",
						"default": "",
						"description": "设置百度翻译API的密钥"
					},
					"easyTranslator.API.youdaoAppKey": {
						"type": "string",
						"default": "",
						"description": "设置有道翻译API的应用ID"
					},
					"easyTranslator.API.youdaoKey": {
						"type": "string",
						"default": "",
						"description": "设置有道翻译API的应用密钥"
					},
					"easyTranslator.API.type": {
						"type": "string",
						"default": "baidu",
						"enum": [
							"baidu",
							"youdao"
						],
						"enumDescriptions": [
							"使用百度翻译API，支持28种语言实时互译，使用前需申请并设置APPID以及密钥",
							"使用有道翻译API，包含了中英翻译和小语种翻译功能，使用前需申请并设置应用ID以及应用密钥"
						],
						"description": "选择翻译接口"
					}
				}
			}
		]
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"eslint": "^5.13.0",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	},
	"dependencies": {
		"js-md5": "^0.7.3",
		"js-sha256": "^0.9.0",
		"request": "^2.88.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Bug-Jun/easy-translator"
	}
}
